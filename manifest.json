{
   "manifest_version":2,
   "name":"Tweet Forever",
   "description":"Chrome Extension that allows you to post long tweets",
   "version":"1.0",
   "browser_action":{
      "default_icon":"assets/twitter.svg",
      "default_popup":"login.html"
   },

   "background": {
     "scripts":  [
       "js/background.js"
     ]
   },
   "permissions":[
      "tabs",
      "https://twitter.com/*",
      "https://*.twitter.com/*"
   ]
}